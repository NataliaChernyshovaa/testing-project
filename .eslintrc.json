{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "standard-with-typescript",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "semi": "off",
        "@typescript-eslint/semi": "off",
        "@typescript-eslint/no-unused-vars": "off",
        "@typescript-eslint/no-useless-constructor": "off"
    }
}
